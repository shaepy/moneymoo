<%- include('../../partials/_header') %>
    <title>Portfolio</title>
</head>
<body>
    <a href="/portfolio?id=<%= portfolio._id %>">Back to Portfolio</a>
    <h1>Add a Trade</h1>
    <form action="/portfolio/<%= portfolio._id %>" method="POST">
        <div>
            <label for="type">Trade:</label>
            <select name="type" id="type" required >
                <option>Buy</option>
                <option>Sell</option>
            </select>
        </div>
        <div>
            <label for="symbol">Stock Symbol</label>
            <input type="text" name="symbol" id="symbol" required class="input is-normal"/>
        </div>
        <div>
            <label for="date">Date</label>
            <input type="date" name="date" id="date" required class="input is-normal"/>
        </div>
        <div>
            <label for="quantity">Quantity</label>
            <input type="text" name="quantity" id="quantity" required class="input is-normal"/>
        </div>
        <div>
            <label for="price">Price per share</label>
            <input type="text" name="price" id="price" required class="input is-normal"/>
        </div>
        <div>
            <label for="notes">Notes</label>
            <textarea id="notes" name="notes" placeholder="Write something here" class="textarea"></textarea>
        </div>
        <button type="submit" class="button is-light">Add Trade</button>
    </form> 
</body>
</html>