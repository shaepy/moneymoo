<%- include('../partials/_header') %>
    <title>Watchlist</title>
</head>
<body>
    <%- include('../partials/_navbar') %>
    <div class="ml-5 mr-5">
        <p class="mt-3 mb-3"><a href="/watchlist">Back to Watchlists</a></p>
        <h1 class="is-size-3 mt-3 mb-4 ml-6 mr-6">Create Watchlist</h1>
        <form action="/watchlist" method="POST" class="box ml-6 mr-6" id="add-a-trade">
            <div class="field">
                <label for="name" class="label">Watchlist Name</label>
                <input type="text" id="name" name="name" placeholder="Enter watchlist name" required class="input is-normal"/>
            </div>
            <button type="submit" class="button is-link mt-2">Create Watchlist</button>
        </form>
    </div>
</body>
</html>